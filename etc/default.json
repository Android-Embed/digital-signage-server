{
    "reloader": true,
    "debug": true,
    "environment": "dev",
    "db": {
        "backend": "sqlite3",
        "sqlite3": {
            "filename": "%(HOME)s/var/data/store.db"
        }
    },
    "http": {
        "bind_address": "127.0.0.1",
        "port": 8000
    },
    "redis": {
        "server": "127.0.0.1",
        "port": 6379
    },
    "logging": {
        "version": 1,
        "formatters": {
            "http": {
                "format" : "localhost - - [%(asctime)s] %(process)d %(levelname)s %(message)s",
                "datefmt": "%Y/%m/%d %H:%M:%S"
            }
        },
        "handlers": {
            "console": {
                "class"    : "logging.StreamHandler",
                "formatter": "http",
                "level"    : "DEBUG",
                "stream"   : "ext://sys.stdout"
            },
            "pygments-http" : {
                "class"    : "utils.logkit.PygmentsHandler",
                "formatter": "http",
                "level"    : "DEBUG",
                "stream"   : "ext://sys.stderr",
                "syntax"   : "guess"
            }
        },
        "loggers": {
            "peewee": {
                "level"    : "WARN",
                "handlers" : ["pygments-http"],
                "propagate": false
            }
        },
        "root": {
            "level"   : "DEBUG",
            "handlers": ["pygments-http"]
        }
    }
}
